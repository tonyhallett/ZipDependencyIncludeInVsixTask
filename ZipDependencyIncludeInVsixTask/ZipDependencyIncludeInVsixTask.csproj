<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>MSBuild base tasks for zipping dependencies based on version and including in VSIX</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Tony Hallett</Authors>
    <PackageProjectUrl>https://github.com/tonyhallett/ZipDependencyIncludeInVsixTask</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tonyhallett/ZipDependencyIncludeInVsixTask.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>vsix msbuild task zip</PackageTags>
    <Version>1.0.1</Version>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.9.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>
</Project>